{% extends "base.html.twig" %}
{% block style %}<link href="css/style-signin.css" rel="stylesheet"> {% endblock %}
{% block title %} {{ parent() }} Gestion du compte {% endblock %}
{% block contenu %} 
    {% if form.utilisateur is defined %}
        {% if form.utilisateur != null %}
            {% if form.utilisateur.email == session.login %}
                <form class="form-signin" action="index.php?page=gestionCompte" method="post"enctype="application/x-www-form-urlencoded">
                    <div class="info">
                        <h1 style="font-family: CaviarDreams">Bonjour {{form.utilisateur.prenom}} {{form.utilisateur.nom}}</h1>
                        <hr/>
                        <br/>
                        <p style="margin-left:16%"><span class="glyphicon glyphicon-envelope" style="font-size:30px; width:20%;color:black"></span>{{session.login}}<a class="modif" href="index.php?page=modifEmail&email={{session.login}}" >  Modifier</a></p>
                        <br/>
                        <p style="margin-left:16%" type="password"><span class="glyphicon glyphicon-pencil" style="font-size:30px; width:20%;color:black"></span>••••••••••••••<a class="modif" href="index.php?page=modifMdp&email={{session.login}}">  Modifier</a></p>
                        <br/>
                        <p style="margin-left:16%"><span class="glyphicon glyphicon-user" style="font-size:30px; width:20%;color:black"></span>{{form.utilisateur.prenom}} {{form.utilisateur.nom}}<a  class="modif" href="index.php?page=modifNom&email={{session.login}}">  Modifier</a></p>
                    </div>
                </form>
            {% else %} 
                <h1 class="alert alert-danger" role="alert">Vous vous êtes perdu? :(</h1> 
                <center>
                    <a style="text-decoration:none" href="index.php"><h6 style='width:20%'>Retour a l'acceuil</h6></a>
                </center>
            {% endif %}     
        {% endif %}
    {% endif %}      
{% endblock %}

