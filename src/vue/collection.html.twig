{% extends "base.html.twig" %}

{% block title %}
  {{ parent() }}
  collection
{% endblock %}

{% block contenu %}
  <div class="container" style="margin-top:1em">
    {% if l %}

  {% else %}
  <h4 class="textcenter">Pas de coup de coeur</h4>
{% endif %}
    <h4 style="margin-left:1em; padding:0.3em;text-decoration: underline;">Collections titre</h4>
    {% for l in liste %}
      <div class="row" id="borderimg5" style="margin-left:1em; margin-right:1em">
        <div class="col-3">
          <div style="background-image: url({{ l.couverture }});  background-position: center center;background-repeat:  no-repeat; background-size:  contain; width: auto; height: 200px;"></div>
        </div>
        <div class="col-9">
          <h3>{{ l.titre }}</h3>
          <h5>{{ l.nomauteur }}.{{ l.prenomauteur }}</h5>
          <p style="color: #999">{{ l.libellegenre }}
            |
            {{ l.nomediteur }}
            | parue en
            {{ l.datelivre }}
            | isbn :
            {{ l.isbn }}
          </p>
          <h5 style="  position: absolute;
    right: 20px;">{{ l.prix }}€</h5>

          <button type="button" class="btnlike" name="button" style="padding:0.5em;">
            <i class="fas fa-heart" style="color: #999; margin-left:0.5em;margin-right:0.5em;font-size: 15px;">
              {{ l.jaime }}</i>
          </button>
          <!-- <button type="button" class="btnlike" name="button" style="padding:0.5em;">réserver</button> -->
          <a href="index.php?page=livre&id={{ l.id }}">
            <button type="button" class="btnlike" name="button" style="padding:0.5em;">voir plus</button>
          </a>
          <h5 style="  position: absolute;
    right: 20px;">{{ l.libelledisponibilite }}</h5>
          {# couleur du like valider #ff6b6b #}

        </div>

      </div>
      <hr/>
    {% endfor %}
    {% set nb = form.nbpages %}

    <nav aria-label="Page navigation example">
      <ul class="pagination justify-content-center">
        <li class="page-item">
          <a class="page-link" href="index.php?page=collection&nopage={{ 0 }}">&lsaquo;&lsaquo;&lsaquo;</a>
        </li>
        {% for i in 1..nb %}

          <li class="page-item">
            <a class="page-link" href="index.php?page=collection&nopage={{ i-1 }}">{{ i-1 }}</a>
          </li>
        {% endfor %}

        <li class="page-item">
          <a class="page-link" href="index.php?page=collection&nopage={{ nb-1 }}">&rsaquo;&rsaquo;&rsaquo;</a>
        </li>
      </ul>
    </nav>
  </div>
{% endblock %}
