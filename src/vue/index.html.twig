{% extends "base.html.twig" %}
{% block title %} {{ parent() }} Accueil {% endblock %}
{% block contenu %}
    <h1 style="padding:10px; background-color: white; margin-top:0%;border-radius:5px">Bienvenue sur légendarium</h1>
    <hr/>
    <center>
        <h3 style='background-color:white; width:50%; padding:8px; border: solid 2px'>Cliquez sur l'évènement pour plus d'informations</h3>
    </center>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                {% for i in 0..form.nbActu-1 %}
                    <li data-target="#myCarousel" data-slide-to="{{1+i}}"></li>
                {% endfor %}
        </ol>
        <center>
            <div class="carousel-inner">
                <div style="border-radius: 0px" class="item active" >
                    <a href="" style="text-decoration:none; cursor: default;" onclick="return false">
                        <div class="slide1">
                            <center>
                                <br/><br/><br/><br/><br/><br/>
                                <h1> Évènements à venir </h1>
                            </center>
                        </div>
                    </a>
                </div>
                {% for a in liste %}
                    <div style="border-radius: 0px" class="item">
                        <a href="index.php?page=event&idActu={{a.idActu}}">
                            <img class="img-repsonsive" src="images/{{a.photo}}" style="height: 450px; width:800px;"/>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </center>
        <a  style="background-image: none" class="left carousel-control btnSlide" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a  style="background-image: none" class="right carousel-control btnSlide" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
{% endblock %} 
