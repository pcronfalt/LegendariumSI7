{% extends "base.html.twig" %}
{% block style %}<link href="css/style-signin.css" rel="stylesheet"> {% endblock %}
{% block title %} {{ parent() }} Gestion des utilisateurs {% endblock %}
{% block contenu %} 
    <div class="panel-heading">
        <h1>Gestion des utilisateurs</h1>
        <br/><br/>
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <tr><th>Prénom</th><th>Nom</th><th>E-mail</th><th>Rôle</th><th>Date de naissance</th></tr>
                        {% for u in liste %}
                    <tr><td>
                            {{u.prenom}}
                        </td>
                        <td>
                            {{u.nom}}
                        </td>
                        <td style="width:10%">
                            {{u.email}}
                        </td>
                        <td style="">
                            {{u.libelleRole}}<a href="index.php?page=modifRole&email={{ u.email }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        </td>
                        <td>
                            {{u.dateNaiss}}
                        </td>
                    </tr> 
                {% endfor %}
            </table>
        </div>
    </div>
    <center>
        {% set nb = form.nbpages %}
        <nav aria-label="Page navigation">  
            <ul class="pagination"> 
                {% for i in 1..nb %}
                    <li><a href="index.php?page=utilisateur&nopage={{ i-1 }}">{{ i }}</a></li> 
                    {% endfor %}  
            </ul>
        </nav>
    </center>

</html>
{% endblock %} 