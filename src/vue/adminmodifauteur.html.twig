{% extends "administrationbase.html.twig" %}
{% block title %}
  {{ parent() }}
  modif auteur
{% endblock %}

{% block contenu %}
{% if form.auteur is defined %}
  {% if form.auteur != null %}

  <div class="container-fluid"style="padding: 5rem">
    <div class="row" >
      <div class="container" id="borderimg3" style="padding: 5rem">
        <h4>Modifier L'auteur : "<font style="font-style: italic; font-weight: bold;">{{ form.auteur.nomauteur }}.{{ form.auteur.prenomauteur }} </font>  "</h4>
        <br/>
        <form class="form-signin" action="index.php?page=modifauteur" method="post" enctype="application/x-www-formurlencoded">
          <div class="form-row">
            <div class="col">
            <label for="inputNom">Nom :</label>
            <input class="form-control" type="text" name="inputNom" placeholder="Saisir le nouveau nom de l'auteur" id="inputNom" value="{{ form.auteur.nomauteur }}" required="required" autofocus="autofocus">
            <span ></span>
           </div>
           <div class="col">
             <label for="inputPrenom" >Prenom :</label>
             <input class="form-control" type="text" name="inputPrenom" placeholder="Saisir le nouveau prenom de l'auteur" id="inputPrenom" value="{{ form.auteur.prenomauteur }}"required="required" autofocus="autofocus" >
             <span ></span>
           </div>
          </div>
          <br/>

            <div class="form-row">

              <label for="inputBiographie">Biographie :</label>
              <textarea class="form-control" type="text" name="inputBiographie" placeholder="Saisir la nouvelle biographie de l'auteur" id="inputBiographie"  required="required" autofocus="autofocus" rows="5">{{ form.auteur.biographieauteur }}</textarea>
<span ></span>
            </div>

        </div>
        <div class="container-fluid textcenter">
            <input type="hidden" name="idauteur" value="{{ form.auteur.idauteur }}"/>
          <button type="submit" class="btnsingin" name="btModifier">Modifier</button>
        </div>
      </form>
    </div>
  </div>

  {% else %}
  <div class="container-fluid" style="padding: 5rem">
    <div class="row">
      <div class="container " id="borderimg3" style="padding: 5rem">

        <form class="textcenter"  method="post" style="width: 100%;">
          <h2 class="textcenter" style="color: #ff6b6b">{{ form.message }}</h2>
        </div>
        <div class="container-fluid textcenter">

          <button type="submit" class="btnsingin" name="button" formaction="index.php?page=adminauteur">Retour a la liste des auteur</button>
        </div>
      </form>
    </div>
  </div>

  {% endif %}
{% else %}

  {% if form.valide == true %}
  <div class="container-fluid" style="padding: 5rem">
    <div class="row">
      <div class="container " id="borderimg3" style="padding: 5rem">

        <form class="textcenter"  method="post" style="width: 100%;">
          <h2 class="textcenter">{{ form.message }}</h2>
        </div>
        <div class="container-fluid textcenter">

          <button type="submit" class="btnsingin" name="button" formaction="index.php?page=adminauteur">Retour a la liste des auteur</button>
        </div>
      </form>
    </div>
  </div>


  {% else %}
  <div class="container-fluid" style="padding: 5rem">
    <div class="row">
      <div class="container " id="borderimg3" style="padding: 5rem">

        <form class="textcenter"  method="post" style="width: 100%;">
          <h2 class="textcenter" style="color: #ff6b6b">{{ form.message }}</h2>
        </div>
        <div class="container-fluid textcenter">

          <button type="submit" class="btnsingin" name="button" formaction="index.php?page=adminauteur">Retour a la liste des auteur</button>
        </div>
      </form>
    </div>
  </div>
  {% endif %}
{% endif %}
{% endblock %}
